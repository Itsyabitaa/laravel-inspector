{
  "name": "laravel-inspector",
  "displayName": "laravel inspector",
  "description": "Laravel controller performance analyzer",
  "version": "0.1.0",
  "publisher": "kuku-sha",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuku-sha/laravel-inspector.git"
  },
  "bugs": {
    "url": "https://github.com/kuku-sha/laravel-inspector/issues"
  },
  "homepage": "https://github.com/kuku-sha/laravel-inspector#readme",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravel-inspector.analyzeController",
        "title": "Laravel Inspector: Analyze Controller"
      }
    ],
    "configuration": {
      "title": "Laravel Inspector",
      "properties": {
        "laravelInspector.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens with complexity and query info above controller methods."
        },
        "laravelInspector.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings for N+1 queries in the Problems panel."
        },
        "laravelInspector.enableDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Highlight query lines with background colors (blue/yellow/red/green)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.5",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "php-parser": "^3.2.5"
  }
}